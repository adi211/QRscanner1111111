<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:text="TextView"
            android:textSize="25dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custum_button"
            android:text="Scan QR"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:hint="*user email*"
            android:textSize="22sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <TextView
            android:id="@+id/showUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text="Show user profile" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:onClick="addto"
            android:text="Add/Remove from my building"
            android:textColor="#C51010" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custum_button"
            android:onClick="qwe"
            android:text="Click to see WIIMB" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:textColor="#C51010"
            android:onClick="zxc"
            android:text="Click to see who have enter permission" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end"
        android:orientation="vertical">


        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fab"
            android:layout_width="367dp"
            android:layout_height="520dp"
            app:fab_addButtonColorNormal="#C51010"
            app:fab_addButtonColorPressed="#C51010"
            app:fab_addButtonPlusIconColor="#FFF"
            app:fab_labelStyle="@style/custumeFab">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="#000"
                app:fab_colorPressed="#000"
                app:fab_icon="@drawable/ic_action_delete"
                app:fab_size="mini"
                app:fab_title="Clear requests"
                android:onClick="cr"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="#C51010"
                app:fab_colorPressed="#C51010"
                app:fab_icon="@drawable/ic_action_add"
                app:fab_size="mini"
                app:fab_title="Add/Remove manually"
                android:onClick="arm"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab131"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_colorNormal="#000"
                app:fab_colorPressed="#000"
                app:fab_icon="@drawable/ic_action_war"
                app:fab_size="mini"
                app:fab_title="Delete your place"
                android:onClick="cyp"/>


        </com.getbase.floatingactionbutton.FloatingActionsMenu>





    </LinearLayout>


</RelativeLayout>